<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    card_view:cardBackgroundColor="#f1f8e9"
    card_view:cardCornerRadius="5dp"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollview"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lt.jsj.qust.jjlin.fragment.ZiLiaoFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/touxiang"
            app:border_width="2dp"
            android:layout_margin="3dp"
            app:border_color="@color/colorPrimary"/>
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/profiletextview"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/ripple_red"
        android:elevation="2dp"
        android:layout_margin="10dp"/></android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/profiletextview2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/blue"
        android:elevation="2dp"
        android:layout_margin="10dp"/></android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/profiletextview3"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="20sp"
    android:layout_marginTop="5dp"
    android:textStyle="bold|italic"
    android:textColor="@color/colorPrimary"
    android:elevation="2dp"
    android:layout_margin="10dp"/></android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/profiletextview4"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    android:textColor="@color/windowBackgroundColor"
    android:elevation="2dp"
    android:layout_margin="10dp"/></android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/profiletextview5"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="20sp"
    android:layout_marginTop="5dp"
    android:textStyle="bold|italic"
    android:textColor="@color/red"
    android:elevation="2dp"
    android:layout_margin="10dp"/></android.support.v7.widget.CardView>




</LinearLayout>

        </FrameLayout>
    </ScrollView>
    <lt.jsj.qust.jjlin.views.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp" />
</android.support.v7.widget.CardView>